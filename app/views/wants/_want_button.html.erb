<% if current_user.want?(shop) %>
  <%= form_tag(want_path(shop.id), method: :delete) do %>
    <%= hidden_field_tag :shop_id, shop.id %>
    <%= submit_tag 'Unwant', class: 'btn btn-success' %>
  <% end %>
<% else %>
  <%= form_tag(wants_path) do %>
    <%= hidden_field_tag :shop_id, shop.shop_id %>
    <%= submit_tag '行ってみたい', class: 'btn btn-primary' %>
  <% end %>
<% end %>