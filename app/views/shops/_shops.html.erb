<% content_for :cover do %>
  <section class="intro">
    <div class="inner">
      <div class="navbar">
        <%= render 'layouts/navbar' %>
      </div>        
        
        
        
        <% if shops %>
          <div class="row">
            <% shops.each do |shop| %>
              <div class="shop">
                <div class="col-md-3 col-sm-4 col-xs-12">
                  <div class="panel panel-default">
                    <div class="panel-heading text-center">
                      <!-- img src="<%= shop.image_url %>" alt="" -->
                      <%= image_tag shop.image_url %>
                    </div>
                    <div class="panel-body">
                      <p class="shop-title"><%= shop.name %></p>
                      <p class="shop-title_kana"><%= shop.name_kana %></p>
                      <p class="shop-address"><%= shop.address %></p>
                      <p class="shop-tel"><%= shop.tel %></p>
                      <p class="shop-opentime"><%= shop.opentime %></p>
                      <p class="shop-holiday"><%= shop.holiday %></p>
                      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#shop-modal-<%= shop.shop_id %>"> <!-- ここ！ -->
                       カフェ詳細
                      </button>
        
                    </div>
                  </div>
                </div>
                <%= render 'shop', shop: shop %>
                  
              </div>
            <% end %>
            
            
            <script>
            $(document).ready(function() {
              $('.shop').click(function() {
                var self = $(this);
                var shop_name = self.data('shop-name');
                var shop_id = self.data('shop-id');
                $('#pref-modal').modal('hide');
              })
            })
            </script>
          </div>
        <% end %>
      </div>
    </div>
  </section>
<% end %>