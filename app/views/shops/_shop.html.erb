<div class="modal fade" id="shop-modal-<%= shop.shop_id %>">
    <div class="modal-dialog" style="width:1250px;">
      <div class="modal-content">
        <div class="modal-header">
          <h3 class="modal-title"><%=shop.name %></h3>
          <p class="shop-title_kana"  href="javascript:;" data-shop-name-kana><%= shop.name_kana %></p>
          <button type="button" class="close" data-dismiss="modal" aria-label="閉じる">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
  
        <div class="modal-body">
          <%= image_tag shop.image_url %>
          <div class="details">
            <p class="shop-address" href="javascript:;" data-shop-address>住　　所 :  <%= shop.address %></p>
            <p class="shop-tel" href="javascript:;" data-shop-tel>電話番号 : <%= shop.tel %></p>
            <p class="shop-modal-opentime" href="javascript:;" data-shop-opentime>営業時間 : <%= shop.opentime %></p>
            <p class="shop-modal-holiday" href="javascript:;" data-shop-holiday>休　　日 : <%= shop.holiday %></p>
            <a href="<%= shop.url %>">ぐるなびのカフェページへ</a>
          </div>
        </div>
      </div>
    </div>
</div>