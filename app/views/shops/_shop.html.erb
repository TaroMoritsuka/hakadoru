<div class="modal fade" id="shop-modal-<%= shop.shop_id %>">
    <div class="modal-dialog" style="width:1250px;">
      <div class="modal-content">
        <div class="modal-header">
          <h3 class="modal-title"><%=shop.name %></h3>
          <p class="shop-title_kana"  href="javascript:;" data-shop-name-kana><%= shop.name_kana %></p>
          <button type="button" class="close" data-dismiss="modal" aria-label="閉じる">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
  
        <div class="modal-body">
          <%= image_tag shop.image_url %>
          <p class="shop-address" href="javascript:;" data-shop-address><%= shop.address %></p>
          <p class="shop-tel" href="javascript:;" data-shop-tel><%= shop.tel %></p>
          <p class="shop-opentime" href="javascript:;" data-shop-opentime><%= shop.opentime %></p>
          <p class="shop-holiday" href="javascript:;" data-shop-holiday><%= shop.holiday %></p>
        </div>
      </div>
    </div>
</div>