<% if current_user.good?(shop) %>
  <%= form_tag(good_path(shop.id), method: :delete) do %>
    <%= hidden_field_tag :shop_id, shop.id %>
    <%= submit_tag '「はかどった」を解除', class: 'btn btn-success' %>
  <% end %>
<% else %>
  <%= form_tag(goods_path) do %>
    <%= hidden_field_tag :shop_id, shop.shop_id %>
    <%= hidden_field_tag :name, shop.name %>
    <%= hidden_field_tag :name_kana, shop.name_kana %>
    <%= hidden_field_tag :url, shop.url %>
    <%= hidden_field_tag :url_mobile, shop.url_mobile %>
    <%= hidden_field_tag :image_url, shop.image_url %>
    <%= hidden_field_tag :address, shop.address %>
    <%= hidden_field_tag :tel, shop.tel %>
    <%= hidden_field_tag :opentime, shop.opentime %>
    <%= hidden_field_tag :holiday, shop.holiday %>
    <%= submit_tag 'はかどった', class: 'btn btn-primary' %>
  <% end %>
<% end %>